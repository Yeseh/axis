{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist/src",
      "baseUrl": "./src/api",
      "experimentalDecorators": true,
      "declaration": true,
      "allowJs": true,
      "typeRoots": ["./src/api/models"],
      "strict": true
  },
  "lib": ["es2015"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.model.ts"]
}

{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist/src",
        "baseUrl": "./src/api",
        "experimentalDecorators": true,
        "allowJs": true,
        "typeRoots": ["./src/api/models"]
    },
    "lib": ["es2015"],
    "include": ["src/api/**/*.ts", "src/api/middleware/logger.ts"],
    "exclude": ["node_modules", "**/*.test.ts", "**/*.model.ts"]
}
